            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') CitizensOrg
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(ng-show='isLoggedIn' href='/dashboard') Organize
            
              a(href='/findyourcongressperson') CongressPerson
            
              a(href='/about') About
            
              a(ng-hide='isLoggedIn' href='/login') Login
              
              a(ng-show='isLoggedIn') {{ currentUser }}
              
        
          
        
         
    
