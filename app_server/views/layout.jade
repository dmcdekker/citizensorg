            ul.nav.navbar-nav
              li
                a(ng-show='isLoggedIn' href='/dashboard') Organize
              li
                a(href='/findyourcongressperson') CongressPerson
              li  
                a(href='/about') About
              
              li  
                a(ng-hide='isLoggedIn' href='/login') Login
                
              li  
