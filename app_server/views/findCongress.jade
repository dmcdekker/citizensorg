extends layout

h1 find congress person page

block content
    .container
      .row
        .col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
          .panel.panel-post
            form#action-form(action='/findyourcongressperson' method="post")
              .form-group
                label(for='action') Enter Zip
                input#action.form-control(type='text', name='zipcode', value='94606', placeholder='Enter Action')
              
              button.btn.btn-primary(type='submit', value='submit') Submit
  
